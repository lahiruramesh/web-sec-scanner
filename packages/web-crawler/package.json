{
  "name": "@sylonik/web-crawler",
  "version": "1.0.0",
  "description": "CLI tool to crawl websites and analyze network traffic using Playwright",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "web-crawler": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
